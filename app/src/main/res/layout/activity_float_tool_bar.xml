<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay" >
        <!--android:theme：为ToolBar设置深色主题，由于activity的theme是淡色的，如不单独为toolBar设置theme，则会继承-->

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleMarginStart="30dp"/>
        <!--app:titleMarginStart调整title和logo之间的距离-->
        <!--app:popupTheme：该属性设置弹出的菜单项的主题（淡色主题，为了区别，其子元素为深色）；还兼容5.0以下系统-->
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/fab_margin"
            android:src="@mipmap/ic_done"
            app:backgroundTint="@android:color/holo_blue_light"
            app:fabSize="normal"
            app:layout_behavior="pl.pltest.app.utils.RotateBehavior"
            app:rippleColor="@android:color/black"/>
    <!--app:rippleColor浮动操作按钮按下时的涟漪效应的颜色-->
    <!--app:borderWidth设置边框宽度的-->
    <!--app:elevation海拔高度设置空闲状态的阴影深度(默认值是6dp)-->
    <!--app:pressedTranslationZ设置按下状态的阴影深度(默认是12dp)-->
</android.support.design.widget.CoordinatorLayout>
